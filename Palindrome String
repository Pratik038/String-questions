#include <iostream>
using namespace std;

int main() {
	//code
	int t; cin>>t;
	while(t--){
	    int n; cin>>n;
	    cin.ignore();
	    string s; cin>>s;
	    bool is=true;
	    
	    for(int i=0,j=s.size()-1;i<n/2;i++,j--){
	        if(s[i]!=s[j])
	            {
	                is=false;
	                break;
	            }
	    }
	    if(is)
	        cout<<"Yes";
	    else
	        cout<<"No";
	    cout<<endl;
	}
	return 0;
}
